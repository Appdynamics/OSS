<assembly>
    <id>api</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory/>
            <unpack>true</unpack>
            <unpackOptions>
                <excludes>
                    <exclude>META-INF/maven/**</exclude>
                    <exclude>META-INF/resources/**</exclude>
                    <exclude>META-INF/services/**</exclude>
                    <exclude>META-INF/*.xml</exclude>
                    <exclude>META-INF/*.xhtml</exclude>
                    <exclude>META-INF/*.html</exclude>
                    <exclude>META-INF/*.map</exclude>
                    <exclude>META-INF/*.providers</exclude>
                    <exclude>META-INF/mailcap*</exclude>
                    <exclude>META-INF/*.default</exclude>
                    <exclude>com/googlecode/**</exclude>
                    <exclude>com/google/**</exclude>
                    <exclude>ee/**</exclude>
                    <exclude>javassist/**</exclude>
                    <exclude>sample/**</exclude>
                    <exclude>com/sun/**</exclude>
                    <exclude>**/*.html</exclude>
                    <exclude>**/*.txt</exclude>
                    <exclude>**/*.xsd</exclude>
                    <exclude>**/*.properties</exclude>
                    <exclude>**/*.js</exclude>
                    <exclude>**/*.xml</exclude>
                    <exclude>**/*.map</exclude>
                    <exclude>**/*.providers</exclude>
                    <exclude>org/**</exclude>
                    <exclude>javax/xml/crypto/**</exclude>
                </excludes>
            </unpackOptions>
            <includes>
                <include>org.glassfish:javax.servlet</include>
                <include>org.glassfish:javax.annotation</include>
                <include>org.glassfish:javax.ejb</include>
                <include>org.glassfish:javax.enterprise.deploy</include>
                <include>org.glassfish:javax.management.j2ee</include>
                <include>org.glassfish:javax.resource</include>
                <include>org.glassfish:javax.security.auth.message</include>
                <include>org.glassfish:javax.security.jacc</include>
                <include>org.glassfish:javax.transaction</include>
                <include>org.glassfish:javax.xml.stream</include>
                <include>javax.mail:mail</include>
                <include>org.glassfish:javax.xml.rpc</include>
                <include>org.glassfish:javax.activation</include>
                <include>javax.xml.bind:jaxb-api-osgi</include>
                <include>org.glassfish:javax.xml.bind</include>
                <include>com.sun.faces:jsf-api</include>
                <include>com.sun.faces:jsf-impl</include>
                <include>org.glassfish:javax.servlet.jsp</include>
                <include>org.glassfish:javax.jws</include>
                <include>javax.ws.rs:jsr311-api</include>
                <include>org.glassfish:javax.servlet.jsp.jstl</include>
                <include>org.eclipse.persistence:javax.persistence</include>
                <include>org.glassfish:javax.xml.soap</include>
                <include>org.glassfish:javax.jms</include>
                <include>org.glassfish:bean-validator</include>
                <include>org.jboss.weld:weld-osgi-bundle</include>
                <include>com.sun.messaging.mq:jaxm-api</include>
                <include>org.glassfish.web:jstl-impl</include>
                <include>javax.xml:webservices-api-osgi</include>
                <include>com.sun.xml.ws:webservices-osgi</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
