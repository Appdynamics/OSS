<project name="glassfish nucleus package creation" default="create.package" basedir=".">
    <import file="${basedir}/../common-targets.xml"/>

   <target name="create.package">
	  <property name="package.name" value="glassfish-nucleus"/> 

        
	<graphDef id="all-modules" tolerateBrokenPOMs="true">
		<scope level="compile,runtime">
			<subtract>
				    <fullGraph/>
                                     <subGraph groupID="org.glassfish.packager" artifactID="glassfish-grizzly">	
	                                 <scope level="compile,runtime"/>
				     </subGraph>
			     </subtract>
			    
		</scope>					 
       </graphDef>

       
       <stage-module-jars graphid="all-modules" />
       <stage-distribution-fragments graphid="all-modules" />

       <!-- leaving custom handling of top level scripts/config -->

       <resolveArtifact artifactId="nucleus-base" property="nucleus-base.zip"/>
       
	<unzip src="${nucleus-base.zip}" dest="target/stage/${install.dir.name}">
           <patternset>
		   <exclude name="**/domains/**"/>
           </patternset>
        </unzip>

        <mkdir dir="target/stage/${install.dir.name}/glassfish/domains" />

        <copy todir="target/stage/${install.dir.name}/bin">
		<fileset dir="src/main/resources/bin"/>
	</copy>

	<chmod file="target/stage/${install.dir.name}/bin/*" perm="ugo+rx"/>
	<chmod file="target/stage/${install.dir.name}/glassfish/bin/*" perm="ugo+rx"/>

       <if test="${compression}">
	       <antcall target="pack.compression" />
       </if>

       <antcall target="create-zip-artifact"/>		

   </target>
</project>

