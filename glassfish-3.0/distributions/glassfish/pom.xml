<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.glassfish.distributions</groupId>
        <artifactId>distributions</artifactId>
        <version>3.0</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <artifactId>glassfish</artifactId>
    <name>Glassfish v3 GlassFish Distribution</name>
    <packaging>distribution-base-zip</packaging>
    <description>This pom describes how to assemble the GlassFish v3 GlassFish Distribution</description>

    <developers>
        <developer>
            <id>rajeshwar</id>
            <name>Rajeshwar Patil</name>
            <url>http://blogs.sun.com/aquatic</url>
            <organization>Sun Microsystems, Inc.</organization>
            <roles>
                <role>developer</role>
            </roles>
        </developer>
        <developer>
            <id>snjezana</id>
            <name>Snjezana Sevo-Zenzerovic</name>
            <url>http://blogs.sun.com/snjezana</url>
            <organization>Sun Microsystems, Inc.</organization>
            <roles>
                <role>developer</role>
            </roles>
        </developer>
    </developers>

    <build>
        <plugins>
            <!-- Get hold of all the required artifacts -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-dependencies</id>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/stage</outputDirectory>
                            <overWriteReleases>false</overWriteReleases>
                            <overWriteSnapshots>true</overWriteSnapshots>
                            <excludeTransitive>true</excludeTransitive>
                            <includeScope>compile</includeScope>
                            <includeScope>runtime</includeScope>
                        </configuration>
                   </execution>
                </executions>
            </plugin>

            <!-- Create distribution artifact --> 
            <plugin>
                <groupId>org.jvnet.maven-antrun-extended-plugin</groupId>
                <artifactId>maven-antrun-extended-plugin</artifactId>
                <configuration>
                    <tasks>
                        <ant dir="." antfile="build.xml" target="create.distribution" />
                    </tasks>
                </configuration>
             </plugin>
        </plugins>
    </build>

    <!--
    Activate this profile with "mvn -P ips"
    -->
    <profiles>
        <profile>
            <id>ips</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <build>
            <plugins>
            <plugin>
                <groupId>org.jvnet.maven-antrun-extended-plugin</groupId>
                <artifactId>maven-antrun-extended-plugin</artifactId>
                <configuration>
                    <tasks>
                        <ant dir="." antfile="build.xml" target="create.distribution" />
                        <ant dir="." antfile="../distributions.xml" target="create-glassfish-distributions" />
                    </tasks>
                </configuration>
             </plugin>
            </plugins>
            </build>
        </profile>
   </profiles>


    <dependencies>
        <!-- Artifacts to be included in the distribution -->

        <!-- web distribution -->
        <dependency>
            <groupId>org.glassfish.distributions</groupId>
            <artifactId>web</artifactId>
            <version>${project.version}</version>
            <type>zip</type>
        </dependency>

	<!-- commons full package -->       
        <dependency>
           <groupId>org.glassfish.packager</groupId>
           <artifactId>glassfish-common-full</artifactId>
           <version>${project.version}</version>
           <type>zip</type>
        </dependency> 
    

        <!-- ejb full package -->
        <dependency>
            <groupId>org.glassfish.packager</groupId>
            <artifactId>glassfish-ejb</artifactId>
            <version>${project.version}</version>
            <type>zip</type>
        </dependency>     
	
	<!-- CMP package -->
        <dependency>
            <groupId>org.glassfish.packager</groupId>
            <artifactId>glassfish-cmp</artifactId>
            <version>${project.version}</version>
            <type>zip</type>
        </dependency>     

        <!--corba package -->
        <dependency>
            <groupId>org.glassfish.packager</groupId>
            <artifactId>glassfish-corba</artifactId>
            <version>${project.version}</version>
            <type>zip</type>
        </dependency>    

        <!-- metro package -->
        <dependency>
            <groupId>org.glassfish.packager</groupId>
            <artifactId>metro</artifactId>
            <version>${project.version}</version>
            <type>zip</type>
        </dependency>

     <!-- appclient package -->
        <dependency>
            <groupId>org.glassfish.packager</groupId>
	    <artifactId>glassfish-appclient</artifactId>
            <version>${project.version}</version>
            <type>zip</type>
        </dependency>

        <!-- jms package -->
        <dependency>
            <groupId>org.glassfish.packager</groupId>
	    <artifactId>glassfish-jms</artifactId>
            <version>${project.version}</version>
            <type>zip</type>
        </dependency>

        <!-- mq package -->
        <dependency>
            <groupId>org.glassfish.packager</groupId>
	    <artifactId>mq</artifactId>
            <version>${project.version}</version>
            <type>zip</type>
        </dependency>

        <!-- additional servicetag registry dependency -->
        <dependency>
            <groupId>org.glassfish.registration</groupId>
            <artifactId>servicetag-registry</artifactId>
            <version>${project.version}</version>
            <type>distribution-fragment</type>
        </dependency>
    

</dependencies>

</project>

