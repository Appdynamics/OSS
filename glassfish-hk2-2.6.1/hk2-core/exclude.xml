<FindBugsFilter>
    <!--
        We do I/O using the default encoding everywhere, usually
        to local files that we expect to be encoded with the default
        encoding.
    -->
    <Match>
	  <Bug pattern="DM_DEFAULT_ENCODING"/>
    </Match>
    
    <Match>
      <!-- 
        ClasspathDescriptorFileFinder has been moved to hk2-api.  However, in order
        to maintain backward compatibility with Grizzly and others, this class
        remains, though it has been deprecated
       -->
      <Class name="org.glassfish.hk2.bootstrap.impl.ClasspathDescriptorFileFinder" />
      <Bug pattern="NM_SAME_SIMPLE_NAME_AS_SUPERCLASS" />          
    </Match>
</FindBugsFilter>
